{
  "name": "workflow-ca",
  "version": "1.0.0",
  "description": "configuration and testing for project",
  "main": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andjhay/social-media-client.git"
  },
  "bugs": {
    "url": "https://github.com/andjhay/social-media-client/issues"
  },
  "homepage": "https://github.com/andjhay/social-media-client#readme",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w *.js",
    "lint": "eslint *.js",
    "lint-fix": "eslint *.js --cache --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "test": "npm run test-e2e",
    "test-unit": "jest",
    "test-e2e": "cypress open"
  },
  "keywords": [],
  "author": "Andrew Hay",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^11.0.1",
    "eslint": "^8.27.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.1.5",
    "husky": "^8.0.2",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.3",
    "live-server": "^1.1.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.test.js": [
      "jest"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
